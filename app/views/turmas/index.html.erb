<h1>Listing turmas</h1>

<table>
  <tr>
    <th>Codigo</th>
    <th>Semestre</th>
    <th>Creditos</th>
    <th>Disciplina</th>
    <th>Professor</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @turmas.each do |turma| %>
  <tr>
    <td><%= turma.codigo %></td>
    <td><%= turma.semestre %></td>
    <td><%= turma.creditos %></td>
    <td><%= turma.disciplina.nome %></td>
    <td><%= turma.professor.nome %></td>
    <td><%= link_to 'Show', turma %></td>
    <td><%= link_to 'Edit', edit_turma_path(turma) %></td>
    <td><%= link_to 'Destroy', turma, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

